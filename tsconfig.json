{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",         // <-- ensures compiled files go to 'dist'
    "rootDir": "./src",          // <-- your source files
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
